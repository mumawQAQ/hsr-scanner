{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hsr-scanner",
  "version": "4.5.0",
  "identifier": "com.github.mumawQAQ.hsr-scanner",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "hsr-scanner",
        "url": "index.html",
        "width": 800,
        "height": 600
      },
      {
        "label": "logs",
        "title": "logs",
        "url": "logs.html",
        "width": 650,
        "height": 250,
        "transparent": true,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "x": 0,
        "y": 0
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhCMDI4MjBBQkE1RkIzOUUKUldTZXMxKzZDb0lDaTdnd0J4SlFUZ0NyV2dVK3BsVWNJSW1GOENrZlZxK0pVb2VpNW5lbHkwa0kK",
      "endpoints": [
        "https://mumas.org/updater/latest.json"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../backend/app/**/*",
      "../backend/*.py",
      "../tools/**/*"
    ]
  }
}
